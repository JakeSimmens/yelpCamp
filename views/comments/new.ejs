<% include ../partials/header %>

<div class="container text-center">
    <div class="row">
        <h1 class="pb-5">Add New Comment to <%= campground.name %> </h1>

        <div style="width: 30%; margin: 30px auto;">

            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="form-horizontal">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Your comment...">
                </div>

                <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>

            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
    

</div>

<% include ../partials/footer %>