<% include ../partials/header %>

<div class="container text-center">
    <div class="row">
        <h1 class="pb-5">Edit Campground</h1>

        <div style="width: 60%; margin: 30px auto;">

            <form action="/campgrounds/<%= editCampground._id %>?_method=PUT" method="POST" class="form-horizontal">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= editCampground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= editCampground.image %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" value="<%= editCampground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" value="<%= editCampground.price %>">
                </div>
                <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
                </div>

            </form>
            <a href="/campgrounds/<%= editCampground._id %>">Back</a>
        </div>
        
    </div>
    

</div>

<% include ../partials/footer %>